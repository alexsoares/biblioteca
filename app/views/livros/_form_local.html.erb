	<div style='display:none'>
		<div id='inline_local' style='padding:10px; background:#fff;'>
          <% form_remote_for(:localizacao,:url => { :action => 'create_local' }, :success => "$.fn.colorbox.close()") do |f|%>
            <%= error_messages_for 'local' %>
            <table>
              <th width="30%">
                <div class="botao">Localização:</div>
              </th>
              <tr>
                <td width="20%" align="center">
                  <%= current_user.unidade.nome %>
                </td>                
              </tr>
              <tr>
                <td>
                  <%= f.label :local_guardado %><br />
                  <%= f.text_field :local_guardado %>
                </td>
              </tr>
              <tr>
                <td>
                  <%= f.label :aquisicao %><br />
                  <%= f.text_field :aquisicao %>
                </td>
              </tr>
              <tr>
                <td>
                  <%= f.label :data_aquisicao %><br />
                  <%= f.date_select :data_aquisicao %>
                </td>
              </tr>
              <tr><td><div class="botao"><%= submit_tag 'Criar!'  %></div></td></tr>
            </table>
          <%end%>
          <hr>
        </div>
	</div>