<% title "LIVROS", :id =>"livros" %>
<div class="tabs">
<table class="grid" >
  <thead>
    <tr>
      <th width="400">Identificacao</th>
      <th width="100">Area</th>
      <th width="100">Editora</th>
      <th colspan="3">Administração</th>
    </tr>
  </thead>
  <% for livro in @livros %>
    <tbody>
    <tr>
      <td><%= link_to livro.identificacao.livro, "#inline_livro_#{livro.id}", :class =>"inline", :title => "Informações livro" %></td>
      <td><%=h livro.area.nome %></td>
      <td><%=h livro.editora.nome %></td>
      <td><%= link_to image_tag("/stylesheets/images/exibir.gif", :size => "15x15"), livro, :title => "Exibir livro" %></td>
      <td><%= link_to image_tag("/stylesheets/images/edit.png", :size => "15x15"), edit_livro_path(livro), :title => "Editar livro" %></td>
      <td><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "15x15"), livro, :confirm => 'Confirma?', :method => :delete, :title => "Excluir livro" %></td>
    </tr>
    </tbody>
    <%= render "form_livro", :livro => livro %>
  <% end %>
</table>
  <table>
    <tr>
     <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "35x35"), root_path, :title => "Voltar" %></td>
     <td><%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "20x20"), new_livro_path, :title => "Cadastrar livro" %></td>
    </tr>
  </table>
</div>

