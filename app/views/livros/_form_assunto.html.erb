	<div style='display:none'>
		<div id='inline_assunto' style='padding:10px; background:#fff;'>
          <h2><%= current_user.unidade.nome %></h2>
          <% form_remote_for(:assunto,:url => { :action => 'create_assunto' }, :success => "$.fn.colorbox.close()") do |f|%>
            <%= error_messages_for 'contact' %>
            <table>
              <tr>
                <th width="30%">
                  <div class="botao">Assunto</div>
                </th>
                <td width="20%" align="center">
                  <%= f.text_field :descricao %>
                </td>
                <td><div class="botao"><%= submit_tag 'Criar!'  %></div></td>
              </tr>
            </table>
          <%end%>
          <hr>
        </div>
	</div>