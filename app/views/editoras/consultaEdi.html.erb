<% title "EDITORAS", :id =>"editoras" %>
 <div class="tabs">
   <div id="caixa_titulo">
    <font size="3"><strong>CONSULTAS EDITORAS</strong></font><br/>
  </div>
  <div class="tabs">
  <br/>
  <table width="100%" align="center" >
    <tr>
      <% form_tag consultaEdi_path :method => 'get' do %>
       <td  colspan="2"align="right"><font size="4"> Digitar dado para consulta:</font>
         <%= text_field_tag :search, params[:search] %>
         <%= submit_tag "Filtrar" %>
       </td>
      <% end %>
   </tr>
  </table>
 
  <br/>
  <hr>
  <div class="tabs">
    <table bgcolor="#DCDCDC" width="100%">
         <tr>
            <th width="630">Nome</th>
            <th colspan="4">Administração</th>
         </tr>
          <% for editora in @editoras %>
          <tr bgcolor="#F5F5F5">
            <td><%=h editora.nome %></td>
            <td align="center"><%= link_to image_tag("/stylesheets/images/exibir.gif", :size => "15x15"), editora, :title => "Visualizar Editora" %></td>
            <td align="center"><%= link_to image_tag("/stylesheets/images/edit.png", :size => "15x15"), edit_editora_path(editora),  :title => "Editar Editora" %></td>
            <td align="center"><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "15x15"), editora, :confirm => 'Tem certeza?', :method => :delete,  :title => "Excluir Editora" %></td>
          </tr>
          <% end %>
      </table>
      <table bgcolor="#DCDCDC" width="100%">
         <tr >
           <td align="left" colspan="4"><%= will_paginate @editoras%></td>
       </tr>
      </table>
   </div>

  <table>
    <tr>
     <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "35x35"), root_path, :title => "Voltar" %></td>
     <td align="left"><%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "20x20"), consultaEdi_path, :title => "Nova Area" %></td>
    </tr>
   
  </table>
  </div>
</div>


