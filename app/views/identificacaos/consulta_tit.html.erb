<div id="interno2">
<% title "TÍTULOS", :id =>"identificacaos" %>
 <div class="tabs">
   <div id="caixa_titulo">
    <font size="3"><strong>CONSULTAS TÍTULOS</strong></font><br/>
   </div>
  <div class="tabs">
    <% form_remote_tag :url => consultaTit_path, :method => :get,:loading => "$('#status').show()" , :success => "$('#status').hide()" do %>
         <table width="100%" align="center" bgcolor="#DCDCDC" >
          <tr>
            <td>
               <a href="#" class="filtro"><%= radio_button_tag(:type_of, "1") %></a>Titulo
               <a href="#" class="filtro"><%= radio_button_tag(:type_of, "2") %></a>SubTitulo
               <a href="#" class="sem_filtro"><%= radio_button_tag(:type_of, "3") %></a>Todos
            </td>
         </tr>
         <tr>
           <td><div class="consulta" style="display:none"> <%= render "/shared/consulta" %> </div></td>
         </tr>
        </table>
    <% end %>
    <br/>
    <hr/>
    <div id="titulos"><div id='status' style='display:none;' align="center" ><%= image_tag("/stylesheets/images/loading.gif") %></div></div>
    <br/>
  <table>
    <tr>
     <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "35x35"), root_path, :title => "Voltar" %></td>
     <td width="6%"align="left"><%= link_to image_tag("/stylesheets/images/consulta.png", :size => "40x40"), consultaTit_path, :title => "Nova Consulta" %></td>
     <% if current_user.has_role?('admin') %>
       <td align="left"><%= link_to image_tag("/stylesheets/images/cadastrar.gif", :size => "30x30"), new_identificacao_path, :title => "Cadastrar Título" %></td>
     <%end%>
    </tr>
  </table>
 </div>
 </div>
  <br/>
</div>

