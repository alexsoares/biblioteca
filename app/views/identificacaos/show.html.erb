<% title "TÍTULOS" %>
<div class ="tabs">
  <div id="topoShow"></div>
     <h3><b><i>Títulos  </i></b></h3>
        <hr>
          <p>
            <strong>Código:</strong> <%=h @identificacao.codigo %>
          </p>
          <p>
            <strong>Título:</strong> <%=h @identificacao.livro %>
          </p>
          <p>
            <strong>Subtítulo:</strong> <%=h @identificacao.subtitulo %>
          </p>
          <p>
            <strong>Observação:</strong> <%=h @identificacao.obs %>
          </p>

        <hr>
        <table>
          <tr>
            <td><%= link_to image_tag("/stylesheets/images/listar.png", :size => "25x25"), identificacaos_path, :title => "Título Cadastradas" %></td>
            <td><%= link_to image_tag("/stylesheets/images/edit.png", :size => "25x25"), edit_identificacao_path(@identificacao), :title => "Editar Título" %></td>
            <td><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "25x25"), @identificacao, :confirm => 'Confirma Exclusão?', :method => :delete, :title => "Excluir Título" %></td>
            <td><%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "22x22"), new_identificacao_path, :title => "Cadastrar Título" %></td>
          </tr>
        </table>
</div>


