 <div class="tabs">
  <div class="tabs">
    <% form_remote_tag :url => {:action => 'cad_de_diario'}, :method => :get,:loading => "$('.status').show()" , :success => "$('.status').hide()" do %>
         <table width="100%" align="center" bgcolor="#DCDCDC" >
           <tr>
             <th>Selecione a escola:</th>
           </tr>
           <tr>
             <td><%= collection_select :unidade,:id, Unidade.all, :id, :nome %></td>
           </tr>
           <tr>
             <td>
               <%= submit_tag "Enviar"  %>
             </td>
           </tr>
        </table>
    <% end %>

  <hr/>
  <div id="de_diario">
    <div class='status' style='display:none;' align="center">
      <%= image_tag("/stylesheets/images/loading.gif") %>
    </div>
  </div>
  <div id="count"></div>
  </div>
    <table>
    <tr>
     <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "35x35"), root_path, :title => "Voltar" %></td>
    </tr>
  </table>
</div>


