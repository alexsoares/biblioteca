<h2 align="center">Cadastro de Livros Diarios</h2>
<% atual_inicio = Date.today + 0.hours%>
<% anterior_inicio = atual_inicio - 1.day%>
<table border="1" width="70%" align="center">
<% @users.each do |usuario| %>
  <th colspan="6" align="center">
    <%= "Login: #{usuario.login}" %>
  </th>
  <% busca = usuario.tombos.all(:include => [:livro],:conditions => ["created_at between ? and ?",atual_inicio,(atual_inicio + 23.hours + 59.minutes)]) %>
  <% busca_anterior = usuario.tombos.all(:include => [:livro],:conditions => ["created_at < ?", atual_inicio]) %>
  <tr>
    <td colspan="2">Anterior</td>
    <td colspan="2">Atual</td>
    <td colspan="2">Total</td>
  </tr>
  <tr>
    <td colspan="2"><%=  busca_anterior.count %></td>
    <td colspan="2"><%= busca.count %></td>
    <td colspan="2"><%= busca.count + busca_anterior.count %></td>
  </tr>
<%end%>
</table>
