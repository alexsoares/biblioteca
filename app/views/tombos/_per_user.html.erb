<%if @livros_per_user.present? %>
  <%if @no_livros_per_user.present?%>
    <center><%= "#{@no_livros_per_user.count} livros excluídos por este usuário" %></center>
  <%end%>
  <table width="100%" align="center" border="1" frame="box" rules="all" bgcolor="#F5F5F5">
    <th width="23%">Tombo Seduc</th>
    <th width="22%">Tombo Local</th>
    <th width="60%">Livro</th>
  <% @livros_per_user.each do |user| %>
    <tr>
      <td align="center">
        <%= user.livro.id %>
      </td>
      <td align="center">
        <% if (user.livro.tombo_l).present? %>
          <%= user.livro.tombo_l %>
        <%else%>
          <%= "<b>Sem Tombo</b>" %>
        <%end%>
      </td>
      <td>
        <%= user.livro.identificacao.livro %>
      </td>
    </tr>
  <%end%>
  </table>
<%end%>
