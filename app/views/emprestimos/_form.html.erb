<% form_for @emprestimo do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :tipo_emprestimo,"Emprestimo para:" %><br />
    <%= f.select :tipo_emprestimo, Emprestimo::Tipo, :include_blank => "--Selecionar--" %>
  </p> 
  <a class='inline' href="#inline_content"><div id="aluno" class="aluno"style="display:none">Selecione o Aluno:</div></a>
  <a class='inline' href="#inline_content"><div id="professor" class="professor" style="display:none">Selecione o Funcionario:</div></a>
  <p>
    <a class='inline' href="#inline_emp_livro"><div id="livro">Selecione o livro</div></a>
  </p>

  <p><%= f.submit "Salvar" %></p>
<% end %>
<%= render "form_inline_content" %>



	<div style='display:none'>
		<div id='inline_emp_livro' style='padding:10px; background:#fff;'>
                <table width="100%">
                  <h2><%= current_user.unidade.nome %></h2>
                  <hr/>

                  <% form_remote_for :livro, :method => :get,:loading => "$('#status').show()" , :success => "$('#status').hide()",
                    :url => {:controller => :emprestimos,
                    :action => "dpu" } do |form| %>
                  <tr>
                    <td>
                       <a href="#" class="filtro"><%= form.radio_button(:type_of, "0") %></a>Livros
                       <a href="#" class="filtro"><%= form.radio_button(:type_of, "1") %></a>Dicionario/Enciclopedia
                    </td>
                  </tr>
                  <tr>
                      <td><%= form.text_field :dcu %></td>
                      <td><%= submit_tag "Buscar", :name => nil %></td>
                  </tr>
                  <% end %>
                </table>
                <hr/>
                <br/>
                <div id="livros"></div>
        </div>
	</div>