<h2>CRIAÇÃO DE USUÁRIO</h2>
<% @user.password = @user.password_confirmation = nil %>
<table>
  <%= error_messages_for :user %>
   <% form_for :user, :url => users_path do |f| -%>
    <tr>
      <td align="left">
        <%= f.label :login, "Login" %><br/>
           <%= f.text_field :login %>

      </td>
    </tr>
    <tr>
      <td align="left">
        <%= f.label :email, 'Email'  %><br/>
          <%= f.text_field :email %>

      </td>
    </tr>
    <tr>
      <td align="left">
         <%= f.label :unidade_id, "Unidade" %><br/>
         <%= f.collection_select :unidade_id,@unidades,:id,:nome, :include_blank => "--Selecionar sua unidade" %>

      </td>
    </tr>
    <tr>
      <td align="left">
         <%= f.label :password, 'Senha' %><br/>
         <%= f.password_field :password %>

      </td>
    </tr>
    <tr>
      <td align="left">
         <%= f.label :password_confirmation, 'Confirma Senha' %><br/>
           <%= f.password_field :password_confirmation %>
        
      </td>
    </tr>
    <tr>
      <td align="left">
        <%= submit_tag 'Gerar Login' %>
      </td>
    </tr>
      <% end -%>
</table>