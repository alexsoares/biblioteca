<% title "DICIONÁRIOS & ENCICLOPÉDIAS" %>
<div class ="tabs">
  <div id="topoShow"></div>
  <table  bgcolor="#DCDCDC" width="100%">
    <tr><td>
     <font size="4"><strong><%=h "#{@dicionario_enciclopedia.identificacao.livro}" %></strong></font><br/>
     <font size="3"><strong><%=h "#{@dicionario_enciclopedia.identificacao.subtitulo}" %></strong></font><br/>
   </td></tr>
</table>
       <div id="telaShow">
         <div id="linhaCentral">
           <div id="conteudoEsquerda">
              <h3><b><i><font color="DimGrey">Informações sobre o volume</font></i></b></h3>
                  <hr>
                     <strong>Tipo:</strong>  <%=h @dicionario_enciclopedia.tipo %><br/>
                     <strong>Coleção:</strong>  <%=h @dicionario_enciclopedia.colecao %><br/>
                     <strong>Volume:</strong>  <%=h @dicionario_enciclopedia.volume %><br/>
                     <strong>Editora:</strong>   <%=h @dicionario_enciclopedia.editora.nome %><br/>
                     <strong>Data Edição:</strong>  <%if !@dicionario_enciclopedia.data_edicao.nil?%>
                                                      <%=h @dicionario_enciclopedia.data_edicao.strftime("%Y") %><br/>
                                                    <%end%>
                     <strong>Local Edição:</strong>   <%=h @dicionario_enciclopedia.local_edicao %><br/>
              </div>
                <div id="colunaDireita">
                  <h3><font color="DimGrey"><b><i>Informações sobre localização</i></b></font></h3>
                  <hr>
                     <strong>Tombo Seduc:</strong>   <%=h @dicionario_enciclopedia.tombo_seduc %><br/>
                     <strong>Tombo Local:</strong>   <%=h @dicionario_enciclopedia.tombo_l %><br/>
                     <strong>Tipo de aquisição:</strong>   <%=h @dicionario_enciclopedia.localizacao.aquisicao%><br/>
                     <strong>Localização:</strong>   <%=h @dicionario_enciclopedia.localizacao.local_guardado %><br/>
                     <strong>Unidade:</strong>   <%=h @dicionario_enciclopedia.localizacao.unidade.nome %><br/>
                     <strong>Observação:</strong>   <%=h @dicionario_enciclopedia.obs%><br/>
                </div>

              </div>
            </div>
        <table>
          <tr>
            <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "35x35"), root_path, :title => "Voltar" %></td>
            <td width="6%"align="left"><%= link_to image_tag("/stylesheets/images/listar.png", :size => "25x25"), dicionario_enciclopedias_path, :title => "Dicionários & Enciclopédias Cadastrados" %></td>
            <% if current_user.has_role?('admin') or current_user.has_role?('escola') or current_user.has_role?('responsavel')%>
                <td width="6%"align="left" ><%= link_to image_tag("/stylesheets/images/edit.png", :size => "25x25"), edit_dicionario_enciclopedia_path(@dicionario_enciclopedia), :title => "Editar Dicionário & Enciclopédia" %></td>
                <td width="6%"align="left" ><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "25x25"), @dicionario_enciclopedia, :confirm => 'Confirma Exclusão?', :method => :delete, :title => "Excluir Dicionário & Enciclopédia" %></td>
                <td><%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "22x22"), new_dicionario_enciclopedia_path, :title => "Cadastrar Livro" %></td>
            <%else%>
                <td align="center"> </td>
                <td align="center"> </td>
                <td align="center"> </td>
            <%end%>
          </tr>
        </table>

</div>


