 <table>
    <tr>
      <td align="right"><b>TOTAL DE EXEMPLARES: </b>
         <font color ="red "size="2"><b><%= @contador %></b></font>
      </td>
   </tr>
  </table>
  <div class="tabs">
    <table bgcolor="#DCDCDC" width="100%">
       <tr bgcolor="#DCDCDC" >
         <th width="10%">Nº Tombo</th>
         <th width="40%">Titulo</th>
           <th width="50%">Subitítulo</th>
           <th colspan="3">Administração</th>
         </tr>
        <% for dicionario_enciclopedia in @dicionario_enciclopedias %>
          <tr  bgcolor="#F5F5F5">
            <td align="left"><%=h dicionario_enciclopedia.id %></td>
            <td align="left"><%=h dicionario_enciclopedia.identificacao.livro %></td>
            <td align="left"><%=h dicionario_enciclopedia.identificacao.subtitulo %></td>
            <td align="center"><%= link_to image_tag("/stylesheets/images/exibir.gif", :size => "15x15"), dicionario_enciclopedia, :title => "Exibir livro" %></td>
            <% if current_user.has_role?('admin') or current_user.has_role?('escola') or current_user.has_role?('responsavel')%>
                <td align="center"><%= link_to image_tag("/stylesheets/images/edit.png", :size => "15x15"), edit_livro_path(dicionario_enciclopedia), :title => "Editar livro" %></td>
                <td align="center"><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "15x15"), dicionario_enciclopedia, :confirm => 'Confirma?', :method => :delete, :title => "Excluir livro" %></td>
            <%else%>
                <td align="center"> --- </td>
                <td align="center"> --- </td>
            <%end%>
          </tr>
        <% end %>
     </table>
     <table bgcolor="#DCDCDC" width="100%">
      <tr >
        <td align="left" colspan="4"><%if @dicionario_enciclopedias.present?%><%= will_paginate @dicionario_enciclopedia %><%end%></td>
      </tr>
    </table>
  </div>



