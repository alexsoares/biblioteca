<% title "DICIONÁRIOS & ENCICLOPÉDIAS", :id =>"dicionario_enciclopedias" %>
<div class="tabs">
<table class="grid" >
  <thead>
    <tr>
      <th width="220">Titulo</th>
      <th width="200">Subitítulo</th>
      <th width="150">Coleção</th>
      <th width="20">Vol.</th>
      <th colspan="3">Administração</th>
    </tr>
  </thead>
  <% for dicionario_enciclopedia in @dicionario_enciclopedias %>
    <tbody>
    <tr>
      <td><%=h dicionario_enciclopedia.identificacao.livro %></td>
      <td><%=h dicionario_enciclopedia.identificacao.subtitulo %></td>
      <td><%=h dicionario_enciclopedia.colecao %></td>
      <td><%=h dicionario_enciclopedia.volume %></td>
      <td><%= link_to image_tag("/stylesheets/images/exibir.gif", :size => "15x15"), dicionario_enciclopedia, :title => "Exibir livro" %></td>
      <td><%= link_to image_tag("/stylesheets/images/edit.png", :size => "15x15"), edit_livro_path(dicionario_enciclopedia), :title => "Editar livro" %></td>
      <td><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "15x15"), dicionario_enciclopedia, :confirm => 'Confirma?', :method => :delete, :title => "Excluir livro" %></td>
    </tr>
    </tbody>

  <% end %>
</table>
  <table>
    <tr>
     <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "35x35"), root_path, :title => "Voltar" %></td>
     <td><%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "20x20"), new_dicionario_enciclopedia_path, :title => "Cadastrar livro" %></td>
    </tr>
  </table>
</div>


