	<div style='display:none'>
		<div id='inline_busca' style='padding:10px; background:#EEE9E9;'>
          <h2>DICIONÁRIOS & ENCICLOPÉDIAS</h2>
          <% form_remote_for(:busca,:url => { :action => 'filtrar' },:loading => "$('#status').show()", :success => "$('#status').hide()" ) do |f|%>
            <%= error_messages_for 'contact' %>
          <table>
              <tr>
                <td colspan="2">
                   Digitar uma palavra do <b>Título</b> e clicar em <b>Filtrar</b> e <b>Selecionar</b>
                </td>
                
              </tr>
              <tr>
                <th width="5%">
                  <b>Título:</b>
                </th>
                <td width="40%" align="left">
                  <%= f.text_field :busca, :size => 60 %>
                </td>
                <td><div class="botao"><%= submit_tag 'Filtrar'  %></div></td>
              </tr>
            </table>
          <%end%>
           <font  color="red" size="1">
             <b>Caso o <i>Título</i> não esteja cadastrado clicar </font> </b>
           </font>
          <%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "12x12"), "#inline_titulo", :class =>"inline" %>

          <br/>
            <div id="lista_dicionarios"><div id='status' style='display:none;' align="center" ><%= image_tag("/stylesheets/images/loading.gif") %></div></div>
        </div>
	</div>
 