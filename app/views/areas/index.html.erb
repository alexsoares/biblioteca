<% title "Areas" %>

<table>
  <tr>
    <th>Nome</th>
  </tr>
  <% for area in @areas %>
    <tr>
      <td><%=h area.nome %></td>
      <td><%= link_to "Exibir", area %></td>
      <td><%= link_to "Alterar", edit_area_path(area) %></td>
      <td><%= link_to "Apagar", area, :confirm => 'Tem certeza?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Novo", new_area_path %></p>
