<% title "PERIÓDICOS", :id =>"periodicoss" %>
 <div class="tabs">
   <div id="caixa_titulo">
    <font size="3"><strong>CONSULTAS PERIÓDICOS</strong></font><br/>
  </div>
  <div class="tabs">
   <% form_tag consultaPer_path :method => 'get' do %>
     <table width="100%" align="center" bgcolor="#DCDCDC" >
      <tr>
        <td>
           <%= radio_button_tag(:type_of, "1") %>DIÁRIO
           <%= radio_button_tag(:type_of, "2") %>SEMANAL
           <%= radio_button_tag(:type_of, "3") %>MENSAL
           <%= radio_button_tag(:type_of, "4") %>SEMESTRAL
           <%= radio_button_tag(:type_of, "5") %>ANUAL
           <%= radio_button_tag(:type_of, "6") %>TODOS
        </td>
     </tr>
      <tr>
        <td>
           <%= radio_button_tag(:type_of, "7") %>ANUÁRIO
           <%= radio_button_tag(:type_of, "8") %>BOLETIM
           <%= radio_button_tag(:type_of, "9") %>JORNAL
           <%= radio_button_tag(:type_of, "10") %>REVISTA
           <%= radio_button_tag(:type_of, "11") %>OUTROS
           <%= radio_button_tag(:type_of, "12") %>TODOS
        </td>
     </tr>
    </table>
  </div>
  <div class="tabs">
  <br/>
  <table width="100%" align="center" >
    <tr>
     <td  colspan="2"align="right"><font size="4"> Digitar dado para consulta:</font>
         <%= text_field_tag :search, params[:search] %>
         <%= submit_tag "Filtrar" %>
       </td>
   </tr>
  </table>
 <% end %>
  <br/>
  <hr>
  <div class="tabs">
    <table bgcolor="#DCDCDC" width="100%">
         <tr>
             <th width="100">Tipo</th>
              <th width="200">Título</th>
              <th width="200">Subtítulo</th>
              <th width="90">Periodicidade</th>
              <th colspan="3">Administração</th>
         </tr>

        <% for periodico in @periodicos %>
          <tr  bgcolor="#F5F5F5">
                <td><%=h periodico.tipo%></td>
                <td><%=h periodico.titulo%></td>
                <td><%=h periodico.subtitulo %></td>
                <td align="center"><%=h periodico.periodicidade %></td>
                <td align="center"><%= link_to image_tag("/stylesheets/images/exibir.gif", :size => "15x15"), periodico, :title => "Exibir Periódico" %></td>
                <td align="center"><%= link_to image_tag("/stylesheets/images/edit.png", :size => "15x15"), edit_periodico_path(periodico), :title => "Editar Periódico" %></td>
                <td align="center"><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "15x15"), periodico, :confirm => 'Confirma?', :method => :delete, :title => "Excluir Periódico" %></td>
          </tr>
        <% end %>
      </table>
      <table bgcolor="#DCDCDC" width="100%">
         <tr >
           <td align="left" colspan="4"><%= will_paginate @periodicos%></td>
       </tr>
      </table>
   </div>

  <table>
    <tr>
     <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "35x35"), root_path, :title => "Voltar" %></td>
     <td align="left"><%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "20x20"), consultaPer_path, :title => "Nova Consulta" %></td>
    </tr>
   
  </table>
  </div>
</div>


