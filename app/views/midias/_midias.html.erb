 <table>
    <tr>
      <td align="right"><b>TOTAL DE EXEMPLARES: </b>
         <font color ="red "size="2"><b><%= @contador %></b></font>
      </td>
   </tr>
  </table>
  <div class="tabs">
    <table bgcolor="#DCDCDC" width="100%">
       <tr bgcolor="#DCDCDC" >
           <th width="40%">Titulo</th>
           <th width="25%">Subtítulo</th>
           <th width="10%">Tipo</th>
           <th width="10%">Gênero</th>
           <th colspan="3">Administração</th>
         </tr>
        <% for midia in @midias %>
          <tr  bgcolor="#F5F5F5">
            <td align="left"><%=h midia.titulo %></td>
            <td align="left"><%=h midia.subtitulo %></td>
            <td align="left"><%=h midia.tipo %></td>
            <td align="center"><%=h midia.genero.nome %></td>
            <td align="center"><%= link_to image_tag("/stylesheets/images/exibir.gif", :size => "15x15"), midia, :title => "Exibir Mídia" %></td>
            <% if current_user.has_role?('admin') or current_user.has_role?('escola') or current_user.has_role?('responsavel')%>
                <td align="center"><%= link_to image_tag("/stylesheets/images/edit.png", :size => "15x15"), edit_midia_path(midia), :title => "Editar Midia" %></td>
                <td align="center"><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "15x15"), midia, :confirm => 'Confirma?', :method => :delete, :title => "Excluir Mídia" %></td>
            <%else%>
                <td align="center"> --- </td>
                <td align="center"> --- </td>
            <%end%>
          </tr>
        <% end %>
     </table>
     <table bgcolor="#DCDCDC" width="100%">
      <tr >
        <td align="left" colspan="4"><%if @midias.present?%><%= will_paginate @dicionario_enciclopedia %><%end%></td>
      </tr>
      <tr>
        <td> <font size="2" color="red">Para nova consulta clicar no botão +</font>
        </td>
      </tr>
    </table>
   
  </div>



