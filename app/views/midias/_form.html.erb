<% form_for @midia do |f| %>
  <%= f.error_messages %>
  <table  align="center" bgcolor="#F5F5F5" width="100%">
    <tr>
      <td align="left">
        <b><%= f.label :tombo_l, "Tombo Local:"%></b><br />
        <%= f.text_field :tombo_l, :size => "10" %>
      </td>
     <td align="lef">
          <b><%= f.label :tipo, 'Tipo:' %></b><br />
          <%= f.select :tipo, Midia::TIPO, :include_blank => '---Selecionar---'%>
     </td>
      <td align="left">
        <b><%= f.label :genero_id,"Genero: " %></b><br/>
        <%= f.collection_select :genero_id ,@generos,:id,:nome, :include_blank => "Selecionar" %>
      </td>

    </tr>
    <tr>
      <td colspan="3" align="left">
        <b><%= f.label :titulo, "Título:" %></b><br />
        <%= f.text_field :titulo, :size => "70" %>
      </td>
    </tr>
    <tr>
      <td colspan="3" align="left">
        <b><%= f.label :subtitulo, "Subtítulo:" %></b><br />
        <%= f.text_field :subtitulo, :size => "70" %>
      </td>
    </tr>   
    <tr class="musica">
       <td colspan="2"> <b> Musica(s):</b>
        <%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "12x12"), "#inline_musica", :class =>"inline" %>
        <div id="musica"><%= render "shared/campos/campos_musica"%></div>
      </td>
     <td> <b> Interprete(s):</b>
        <%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "12x12"), "#inline_cantor", :class =>"inline" %>
        <div id="cantor"><%= render "shared/campos/campos_cantor"%></div>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <div id= "musica" style="margin-left: 0px"></div>
      </td>
    </tr>
    <tr>
      <td colspan="3" align="left">
        <b><%= f.label :producao, "Produção:" %></b><br />
        <%= f.text_field :producao, :size => "70" %>
      </td>
    </tr>
    <tr>
      <td colspan="2" align="left">
        <b><%= f.label :local_producao, "Local:" %></b><br />
        <%= f.text_field :local_producao, :size => "35" %>
      </td>
      <td align="left">
        <b><%= f.label :data_producao, "Ano:" %></b><br />
        <%= f.date_select(:data_producao, :order => [:year], :start_year => (Date.today.year)-50) %>
     </td>
    </tr>
    <tr>
      <td colspan="3"  align="left">
        <b><%= f.label :localizacao_id,"Localização: " %></b>
        <%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "12x12"), "#inline_local", :class =>"inline"%>
        <div id="local"><%= render "shared/campos/campos_local"%></div>
      </td>

    </tr>
    <tr>
      <td colspan="3"  align="left">
        <b><%= f.label :obs, 'Observação:' %></b><br />
        <%= f.text_area :obs, :size => "68x3" %>
      </td>
    </tr>
    <tr>
      <td colspan="3"><%= f.submit "Salvar" %></td>
    </tr>
  <% end %>
</table>

    <%= render "shared/forms/form_local" %>
    <%= render "shared/forms/form_musica" %>
    <%= render "shared/forms/form_cantor" %>

