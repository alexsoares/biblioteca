  <table>
    <tr>
      <td align="right"><b>TOTAL DE GÊNEROS: </b>
         <font color ="red "size="2"><b><%= @contador %></b></font>
      </td>
   </tr>
  </table>
   <div class="tabs">
    <table bgcolor="#DCDCDC" width="100%">
         <tr>
            <th width="630">Nome</th>
            <th colspan="4">Administração</th>
         </tr>
          <% for genero in @generos %>
          <tr bgcolor="#F5F5F5">
            <td><%=h genero.nome %></td>
            <td align="center"><%= link_to image_tag("/stylesheets/images/exibir.gif", :size => "15x15"), genero, :title => "Visualizar Gênero" %></td>
            <% if current_user.has_role?('admin') %>
                <td align="center"><%= link_to image_tag("/stylesheets/images/edit.png", :size => "15x15"), edit_genero_path(genero),  :title => "Editar Gênero" %></td>
                <td align="center"><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "15x15"), genero, :confirm => 'Tem certeza?', :method => :delete,  :title => "Excluir Area" %></td>
            <%else%>
                <td align="center"> --- </td>
                <td align="center"> --- </td>
            <%end%>
            </tr>
          <% end %>
      </table>
      <table bgcolor="#DCDCDC" width="100%">
         <tr >
           <td align="left" colspan="4"><%= will_paginate @generos%></td>
       </tr>
      </table>
   </div>