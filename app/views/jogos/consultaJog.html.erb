<% title "JOGOS", :id =>"jogos" %>
 <div class="tabs">
   <div id="caixa_titulo">
    <font size="3"><strong>CONSULTAS JOGOS</strong></font><br/>
  </div>
  <div class="tabs">
   <% form_tag consultaJog_path :method => 'get' do %>
     <table width="100%" align="center" bgcolor="#DCDCDC" >
      <tr>
        <td>
           <%= radio_button_tag(:type_of, "1") %>Nome
           <%= radio_button_tag(:type_of, "2") %>Faixa Etária
           <%= radio_button_tag(:type_of, "3") %>Todos
        </td>
     </tr>
    </table>

  </div>




  <div class="tabs">
  <br/>
  <table width="100%" align="center"z >
    <tr>
     <td  colspan="2"align="right"><font size="4"> Digitar dado para consulta:</font>
         <%= text_field_tag :search, params[:search] %>
         <%= submit_tag "Filtrar" %>
       </td>
   </tr>
  </table>
 <% end %>
  <br/>
  <hr>
  <div class="tabs">
    <table bgcolor="#DCDCDC" width="100%">
         <tr>
            <th width="400">Nome</th>
            <th width="100">Faixa Etária</th>
            <th width="100">Fabricante</th>
            <th colspan="3">Administração</th>
         </tr>

        <% for jogo in @jogos %>
          <tr  bgcolor="#F5F5F5">
            <td><%= jogo.nome%></td>
            <td><%=h jogo.faixa_etaria %></td>
            <td><%=h jogo.fabricante %></td>
            <td align="center"><%= link_to image_tag("/stylesheets/images/exibir.gif", :size => "15x15"), jogo, :title => "Exibir Jogo" %></td>
            <% if current_user.has_role?('admin') or current_user.has_role?('escola') or current_user.has_role?('responsavel')%>
                <td align="center"><%= link_to image_tag("/stylesheets/images/edit.png", :size => "15x15"), edit_jogo_path(jogo), :title => "Editar Jogo" %></td>
                <td align="center"><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "15x15"), jogo, :confirm => 'Confirma?', :method => :delete, :title => "Excluir Jogo" %></td>
            <%else%>
                <td align="center"> --- </td>
                <td align="center"> --- </td>
            <%end%>
          </tr>
        <% end %>
      </table>
      <table bgcolor="#DCDCDC" width="100%">
         <tr >
           <td align="left" colspan="4"><%= will_paginate @jogos%></td>
       </tr>
      </table>
   </div>

  <table>
    <tr>
     <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "35x35"), root_path, :title => "Voltar" %></td>
     <td align="left"><%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "20x20"), consultaJog_path, :title => "Nova Consulta" %></td>
    </tr>
   
  </table>
  </div>
</div>


