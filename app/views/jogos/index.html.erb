<% title "JOGOS", :id =>"livros" %>
<div class="tabs">
<table class="grid" >
  <thead>
    <tr>
      <th width="400">Nome</th>
      <th width="100">Faixa Etária</th>
      <th width="100">Fabricante</th>
      <th colspan="3">Administração</th>
    </tr>
  </thead>
  <% for jogo in @jogos %>
    <tbody>
    <tr>
      <td><%= jogo.nome%></td>
      <td><%=h jogo.faixa_etaria %></td>
      <td><%=h jogo.fabricante %></td>
      <td><%= link_to image_tag("/stylesheets/images/exibir.gif", :size => "15x15"), jogo, :title => "Exibir Jogo" %></td>
      <td><%= link_to image_tag("/stylesheets/images/edit.png", :size => "15x15"), edit_jogo_path(jogo), :title => "Editar jogo" %></td>
      <td><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "15x15"), jogo, :confirm => 'Confirma?', :method => :delete, :title => "Excluir Jogo" %></td>
    </tr>
    </tbody>
    
  <% end %>
</table>
  <table>
    <tr>
     <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "35x35"), root_path, :title => "Voltar" %></td>
     <td><%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "20x20"), new_jogo_path, :title => "Cadastrar livro" %></td>
    </tr>
  </table>
</div>

