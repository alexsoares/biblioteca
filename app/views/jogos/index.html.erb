<% title "JOGOS", :id =>"jogos" %>
 <div class="tabs">
   <div id="caixa_titulo">
    <font size="3"><strong>JOGOS CADASTRADOS</strong></font><br/>
  </div>
  <div class="tabs">
    <table bgcolor="#DCDCDC" width="100%">
         <tr>
            <th width="400">Nome</th>
            <th width="100">Faixa Etária</th>
            <th width="100">Fabricante</th>
            <th colspan="3">Administração</th>
         </tr>

        <% for jogo in @jogos %>
          <tr  bgcolor="#F5F5F5">
            <td><%= jogo.nome%></td>
            <td><%=h jogo.faixa_etaria %></td>
            <td><%=h jogo.fabricante %></td>
            <td align="center"><%= link_to image_tag("/stylesheets/images/exibir.gif", :size => "15x15"), jogo, :title => "Exibir Jogo" %></td>
            <td align="center"><%= link_to image_tag("/stylesheets/images/edit.png", :size => "15x15"), edit_jogo_path(jogo), :title => "Editar Jogo" %></td>
            <td align="center"><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "15x15"), jogo, :confirm => 'Confirma?', :method => :delete, :title => "Excluir Jogo" %></td>
          </tr>
        <% end %>
      </table>
      <table bgcolor="#DCDCDC" width="100%">
         <tr >
           <td align="left" colspan="4"><%= will_paginate @jogos%></td>
       </tr>
      </table>
   </div>
  <table>
    <tr>
     <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "35x35"), root_path, :title => "Voltar" %></td>
     <td><%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "20x20"), new_jogo_path, :title => "Cadastrar Jogo" %></td>
    </tr>
  </table>
</div>




