<% title "Cart" %>

<table id="cart_items">
  <tr>
    <th>Livro</th>
  </tr>
  <% for cart_item in @cart.cart_items %>
    <tr class="<%= cycle :odd, :even %>">
      <td><%=h cart_item.dpu.tombo %></td>
    </tr>
  <% end %>
</table>

<p>
  <% if session[:last_product_page] %>
    <%= link_to "Continue Shopping", session[:last_product_page] %> |
  <% end %>
  <%= link_to "Checkout" %>
</p>