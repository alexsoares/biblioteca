<% form_for @mapas do |f| %>
  <%= f.error_messages %>
<table  width="100%" bgcolor="#F5F5F5">
     <tr>
      <td align="lef" colspan="3">
          <b><%= f.label :tombo_l, 'Tombo Local:' %></b><br />
          <%= f.text_field :tombo_l, :size => "10" %>
      </td>
    </tr>
    <tr>
      <td align="lef" colspan="3">
         <b><%= f.label :titulo,'Titulo:' %></b><br />
         <%= f.text_field :titulo, :size => "65" %>
      </td>
    </tr>
    <tr>
      <td align="lef" colspan="3">
        <b><%= f.label :subtitulo, 'Subtítulo:' %></b><br />
        <%= f.text_field :subtitulo, :size => "65" %>
      </td>
    </tr>
    <tr>
      <td align="lef" width ="40%">
         <b><%= f.label :tipo, 'Tipo:' %></b><br />
         <%= f.select :tipo, Mapa::TIPO_MAPA, :include_blank => '--Selecionar--'%>
      </td>
      <td align="lef" colspan="2">
         <b><%= f.label :formato,'Formato:' %></b><br />
        <%= f.select :formato, Mapa::FORMATO_MAPA%>
      </td>

    </tr>
    <tr>
      <td align="lef">
        <b><%= f.label :editora_id, 'Editora:' %></b><br />
        <%= f.collection_select :editora_id ,@editoras,:id,:nome, :include_blank => "--Selecionar--" %>
      </td>
      <td align="lef"colspan="2">
        <br/>
        <%= f.text_field :edicao, {:value => '1', :size => "1"} %><b>ª<%= f.label :edicao, " Edição" %></b>
         - <b><%= f.label :ano, 'Ano:' %></b>
        <%= f.date_select(:ano, :order => [:year], :start_year => (Date.today.year)-20) %>
      </td>

    </tr>
    <tr>
      <td align="lef" colspan="3">
        <b><%= f.label :localizacao_id,"Localização: " %></b>
        <%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "12x12"), "#inline_local", :class =>"inline"%>
        <div id="local"><%= render "shared/campos/campos_local"%></div>

      </td>
    </tr>
    <tr>
      <td align="lef" colspan="3">
          <b><%= f.label :obs, 'Observação:' %></b><br />
          <%= f.text_area :obs,:size => "35x3" %>
      </td>
    </tr>
    <tr>
      <td colspan="3"><%= f.submit'Salvar' %>
      </td>
    </tr>
   </table>
<% end %>

    <%= render "shared/forms/form_local" %>




