<% form_for @mapas do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :tombo_seduc %><br />
    <%= f.text_field :tombo_seduc %>
  </p>
  <p>
    <%= f.label :tombo_l %><br />
    <%= f.text_field :tombo_l %>
  </p>
  <p>
    <%= f.label :titulo %><br />
    <%= f.text_field :titulo %>
  </p>  <p>
    <%= f.label :subtitulo %><br />
    <%= f.text_field :subtitulo %>
  </p>
  <p>
    <%= f.label :tipo %><br />
    <%= f.select :tipo, Mapas::TIPO_MAPA, :include_blank => '---Selecione---'%>
  </p>
  <p>
    <%= f.label :ano %><br />
    <%= f.date_select(:ano, :order => [:year], :start_year => (Date.today.year)-50) %>
  </p>
  <p>
    <%= f.label :formato %><br />
    <%= f.select :formato, Mapas::FORMATO_MAPA, :include_blank => '---Selecione---'%>
  </p>
  <p>
    <%= f.label :editora_id %><br />
    <%= f.collection_select :editora_id ,@editoras,:id,:nome, :include_blank => "Selecione" %>
  </p>
  <p>
    <%= f.label :edicao %><br />
    <%= f.text_field :edicao %>
  </p>
  <p>
    <%= f.label :local_edicao %><br />
    <%= f.text_field :local_edicao %>
  </p>
  <p>
    <%= f.label :localizacao_id %><br />
    <%= f.collection_select :localizacao_id ,@localizacoes,:id,:descricao, :include_blank => "Selecione" %>
  </p>
  <p>
    <%= f.label :obs %><br />
    <%= f.text_area :obs %>
  </p>
  <p><%= f.submit %></p>
<% end %>
