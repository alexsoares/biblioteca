<% title "MAPAS", :id =>"mapas" %>
 <div class="tabs">
   <div id="caixa_titulo">
    <font size="3"><strong>CONSULTAS MAPAS</strong></font><br/>
  </div>
  <div class="tabs">
   <% form_tag consultaMap_path :method => 'get' do %>
     <table width="100%" align="center" bgcolor="#DCDCDC" >
      <tr>
        <td>
           <%= radio_button_tag(:type_of, "1") %>Título
           <%= radio_button_tag(:type_of, "2") %>Subtítulo
           <%= radio_button_tag(:type_of, "3") %>Todos
        </td>
     </tr>
    </table>
  </div>
  <div class="tabs">
  <br/>
  <table width="100%" align="center" >
    <tr>
     <td  colspan="2"align="right"><font size="4"> Digitar dado para consulta:</font>
         <%= text_field_tag :search, params[:search] %>
         <%= submit_tag "Filtrar" %>
       </td>
   </tr>
  </table>
 <% end %>
  <br/>
  <hr>
  <div class="tabs">
    <table bgcolor="#DCDCDC" width="100%">
         <tr>
                <th width="200">Título</th>
                <th width="300">Subtítulo</th>
                <th width="90">Formato</th>
                <th colspan="3">Administração</th>
         </tr>

           <% for mapa in @mapas %>
            <tr bgcolor="	#F5F5F5">
                <td align="left"><%=h mapa.titulo%></td>
                <td align="left"><%=h mapa.subtitulo %></td>
                <td align="center"><%=h mapa.formato %></td>
                <td align="center"><%= link_to image_tag("/stylesheets/images/exibir.gif", :size => "15x15"), mapa, :title => "Exibir Mapa" %></td>
                <% if current_user.has_role?('admin') or current_user.has_role?('escola') or current_user.has_role?('responsavel')%>
                    <td align="center"><%= link_to image_tag("/stylesheets/images/edit.png", :size => "15x15"), edit_mapa_path(mapa), :title => "Editar Mapa" %></td>
                    <td align="center"><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "15x15"), mapa, :confirm => 'Confirma?', :method => :delete, :title => "Excluir Mapa" %></td>
                <%else%>
                    <td align="center"> --- </td>
                    <td align="center"> --- </td>
                <%end%>
              </tr>
        <% end %>
      </table>
      <table bgcolor="#DCDCDC" width="100%">
         <tr >
           <td align="left" colspan="4"><%= will_paginate @mapas%></td>
       </tr>
      </table>
   </div>

  <table>
    <tr>
     <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "35x35"), root_path, :title => "Voltar" %></td>
     <td align="left"><%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "20x20"), consultaMap_path, :title => "Nova Consulta" %></td>
    </tr>

  </table>
  </div>
</div>


