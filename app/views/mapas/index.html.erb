<div id="interno2">
<% title "MAPAS", :id =>"mapas" %>
 <div class="tabs">
   <div id="caixa_titulo">
    <font size="3"><strong>MAPAS CADASTRADOS</strong></font><br/>
  </div>
  <div class="tabs">
      <table  bgcolor="#DCDCDC" width="100%">
        <tr bgcolor="#DCDCDC" >
                <th width="500">Título</th>
                <th width="400">Subtítulo</th>
                <th width="100">Formato</th>
                <th colspan="3">Administração</th>

           </tr>
           <% for mapa in @mapas %>
            <tr bgcolor="	#F5F5F5">
                 <td align="left"><%=h mapa.titulo%></td>
                <td align="left"><%=h mapa.subtitulo %></td>
                <td align="center"><%=h mapa.formato %></td>
                <td align="center"><%= link_to image_tag("/stylesheets/images/exibir.gif", :size => "15x15"), mapa, :title => "Exibir Mapa" %></td>
                <% if current_user.has_role?('admin') %>
                    <td align="center"><%= link_to image_tag("/stylesheets/images/edit.png", :size => "15x15"), edit_mapa_path(mapa), :title => "Editar Mapa" %></td>
                    <td align="center"><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "15x15"), mapa, :confirm => 'Confirma?', :method => :delete, :title => "Excluir Mapa" %></td>
                <%else%>
                    <td align="center"> --- </td>
                    <td align="center"> --- </td>
                <%end%>
              </tr>
            <% end %>
     </table>

        <table bgcolor="#DCDCDC" width="100%">
           <tr >
             <td align="left" colspan="4"><%= will_paginate @mapas%></td>
          </tr>
        </table>

    </div>
     <table>
       <tr>
         <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "35x35"), root_path, :title => "Voltar" %></td>
         <td><%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "20x20"), new_mapa_path, :title => "Cadastrar livro" %></td>
       </tr>
    </table>
</div>
<br/>
</div>



