<% title "AUTORES" %>
<div class="tabs">
<table class="grid">
  <thead>
  <tr>
    <th width="630">Nome</th>
    <th colspan="4">Administração</th>
  </tr>
  </thead>
  <% for autor in @autores %>
    <tbody>
    <tr>
      <td><%=h autor.nome %></td>
      <td><%= link_to image_tag("/stylesheets/images/exibir.gif", :size => "15x15"), autor, :title => "Visualizar Autor" %></td>
      <td><%= link_to image_tag("/stylesheets/images/edit.png", :size => "15x15"), edit_autor_path(autor),  :title => "Editar Autor" %></td>
      <td><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "15x15"), autor, :confirm => 'Tem certeza?', :method => :delete,  :title => "Excluir Autor" %></td>
    </tr>
    </tbody>    
  <% end %>
</table>
  <table>
    <tr>
     <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "35x35"), root_path, :title => "Voltar" %></td>
     <td><%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "22x22"), new_autor_path, :title => "Cadastrar Autor" %></td>
    </tr>
  </table>
</div>
