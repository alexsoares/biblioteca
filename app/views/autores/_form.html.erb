<% form_for @autor do |f| %>
  <%= f.error_messages %>
  <table  width="100%" bgcolor="#F5F5F5">
    <tr>
      <td>
        <b><%= f.label :nome, 'Nome:' %></b><br />
        <%= f.text_field :nome %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.submit "Salvar" %>
      </td>
    </tr>
  </table>
<% end %>
